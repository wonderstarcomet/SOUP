/// @function super_gen_rand_table()
/// @desc Generates the table of random values used by the game.
function super_gen_rand_table() {
	// DO YOU GUYS GET IT? DO YOU GET THE JOKE???????
	random_set_seed(1112009);
	
	// Defines the minimum and maximum range that a value in the table may have.
	var min_value = 0;
	var max_value = 256;
	
	// Create the table and fill it with random values.
	var rndtable = array_create(256, noone);
	
	for (var i = 0; i < array_length(rndtable); i++) {
		rndtable[i] = irandom_range(min_value, max_value);
	}
}

