// Get a random number from the lookup table.
function super_game_random() {
	// Don't try to access OOB data
	if (gameRandPtr > array_length(rndtable)) {
		gameRandPtr = 0;
	}
	
	var randValue = rndtable[gameRandPtr];
	gameRandPtr += 1;
	return randValue;
}

// Ditto, but for things that do not involve the game.
function super_sys_random() {
	if (sysRandPtr > array_length(rndtable)) {
		sysRandPtr = 0;
	}
	
	var randValue = rndtable[sysRandPtr];
	sysRandPtr += 1;
	return randValue;
}